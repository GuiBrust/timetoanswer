<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Altere sua senha</h1>

          <div>
            <%= f.password_field :password, class: "form-control",placeholder: "Nova Senha" %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, class: "form-control",placeholder: "Confirmar Senha" %>
          </div>

          <div>
            <%= f.submit "Alterar Senha", class: "btn btn-success submit", style: "float: none; margin: 0px; width: 70%" %>
          </div>

          <div class="clearfix"></div>
          <div class="clearfix"></div>
          <br/>

        <% end %>
      </section>
    </div>
  </div>
</div>
